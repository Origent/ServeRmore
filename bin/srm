import sys
import os

if os.environ.get('LC_CTYPE', '') == 'UTF-8':
    os.environ['LC_CTYPE'] = 'en_US.UTF-8'

import ServeRmore.srm

def main():
    if len(sys.argv) < 2:
        config=srvl_config.srvlConfig()
        config.help()
    elif sys.argv[1] == 'help':
        config=srvl_config.srvlConfig()
        config.help()
    elif sys.argv[1] == 'settings':
        config=srvl_config.srvlConfig()
        config.show()
    elif sys.argv[1] == 'version':
        config=srvl_config.srvlConfig()
        config.version()
    elif len(sys.argv) < 2:
        vm = ServeRmore.srm()
        vm.status()
    elif sys.argv[1] == 'status':
        vm = ServeRmore.srm()
        vm.status()
    elif sys.argv[1] == 'create':
        vm = ServeRmore.srm()
        vm.setup()
        vm.create("srm_builder")
    elif sys.argv[1] == 'terminate':
        vm = ServeRmore.srm()
        vm.setup()
        vm.terminate()
    elif sys.argv[1] == 'update':
        vm = ServeRmore.srm()
        vm.setup()
        vm.update()
    elif sys.argv[1] == 'package':
        vm = ServeRmore.srm()
        vm.package()
    elif sys.argv[1] == 'deploy':
        vm = ServeRmore.srm()
        vm.deploy()
    elif sys.argv[1] == 'test':
        vm = ServeRmore.srm()
        vm.test()
    elif sys.argv[1] == 'ssh':
        vm = ServeRmore.srm()
        vm.ssh()
    elif sys.argv[1] == 'sftp':
        vm = ServeRmore.srm()
        vm.sftp()
    else:
        config=srvl_config.srvlConfig()
        config.help()

if __name__ == "__main__":
    main()
