import sys
import os

if os.environ.get('LC_CTYPE', '') == 'UTF-8':
    os.environ['LC_CTYPE'] = 'en_US.UTF-8'

import ServeRmore, srvl_config

def main():
    if len(sys.argv) < 2:
        config=srvl_config.srvlConfig()
        config.help()
    elif len(sys.argv) == 3:
        if sys.argv[1] == 'lambda' and sys.argv[2] == "init":
            func = ServeRmore.srm()
            func.lambda_init()
        elif sys.argv[1] == 'lambda' and sys.argv[2] == "list":
            func = ServeRmore.srm()
            func.lambda_list()
        elif sys.argv[1] == 'lambda' and sys.argv[2] == "create":
            func = ServeRmore.srm()
            func.lambda_create()
        elif sys.argv[1] == 'lambda' and sys.argv[2] == "update":
            func = ServeRmore.srm()
            func.lambda_update()
        elif sys.argv[1] == 'lambda' and sys.argv[2] == "invoke":
            func = ServeRmore.srm()
            func.lambda_invoke()
        elif sys.argv[1] == 'lambda' and sys.argv[2] == "destroy":
            func = ServeRmore.srm()
            func.lambda_destroy()
        elif sys.argv[1] == 'create':
            vm = ServeRmore.srm()
            vm.create(sys.argv[2])
        else:
            config=srvl_config.srvlConfig()
            config.help()
    elif sys.argv[1] == 'status':
        vm = ServeRmore.srm()
        vm.status()
    elif sys.argv[1] == 'cpu': 
        vm = ServeRmore.srm()
        vm.cpu()
    elif sys.argv[1] == 'change':
        vm = ServeRmore.srm()
        vm.change()
    elif sys.argv[1] == 'start':
        vm = ServeRmore.srm()
        vm.start()
    elif sys.argv[1] == 'stop':
        vm = ServeRmore.srm()
        vm.stop()
    elif sys.argv[1] == 'terminate':
        vm = ServeRmore.srm()
        vm.terminate()
    elif sys.argv[1] == 'ssh':
        vm = ServeRmore.srm()
        vm.ssh()
    elif sys.argv[1] == 'tunnel':
        vm = ServeRmore.srm()
        vm.tunnel()
    elif sys.argv[1] == 'bootstrap':
        vm = ServeRmore.srm()
        vm.boostrap()
    elif sys.argv[1] == 'vm_setup':
        vm = ServeRmore.srm()
        vm.vm_setup()
    elif sys.argv[1] == 'help':
        config=srvl_config.srvlConfig()
        config.help()
    elif sys.argv[1] == 'settings':
        config=srvl_config.srvlConfig()
        config.show()
    elif sys.argv[1] == 'version':
        config=srvl_config.srvlConfig()
        config.version()
    else:
        config=srvl_config.srvlConfig()
        config.help()

if __name__ == "__main__":
    main()
